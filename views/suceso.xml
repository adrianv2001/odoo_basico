<odoo>
    <data>
        <record model="ir.actions.act_window" id="suceso_list_action">
            <field name="name">A acci√≥n de suceso</field>
            <!-- O que se visualiza na parte superior esquerda -->
            <field name="res_model">odoo_basico.suceso</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Crea un registro</p>
            </field>
        </record>
        <record model="ir.ui.view" id="suceso_tree_view">
            <field name="name">suceso.tree</field>
            <field name="model">odoo_basico.suceso</field>
            <field name="arch" type="xml">
                <tree string="suceso_Tree" editable="top">
                            <field name="name"/>
                            <field name="descripcion"/>
                            <field name="nivel"/>
                            <field name="data_hora"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>